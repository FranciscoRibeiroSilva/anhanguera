{{>_navbar}}
<br>
<div id="FormulariosAdm">
    <div>
        <div class="container">
            <div class="row">
                <div class="col-20 col-sm-20 col-md-20 col-lg-20 m-auto fundo">

                    {{#each erros}}
                    <div class="alert alert-danger">{{texto}}</div>
                    {{else}}
                    {{/each}}

                    <div class="form-grup">
                        <form align-left="60px" action="/anhangueraeventos/addMinistrantes" , method="POST">

                            <center>
                                <h2>ADICIONAR MINISTRANTE</h2>
                            </center>

                            <div>
                                <div>
                                    <!--NOME DO MINISTRANTE-->
                                    <label for="nome">Nome:</label>
                                    <input class="form-control" type="text" name="nome" placeholder="Informe seu nome">
                                </div>

                                <div>
                                    <!--E-MAIL DO MINISTRANTE-->
                                    <label for="email">E-mail:</label>
                                    <input class="form-control" type="email" name="email"
                                        placeholder="Informe seu e-mail">
                                </div>
                                <div>
                                    <!--TELEFONE DO MINISTRANTE-->
                                    <label for="telefone">Telefone:</label>
                                    <input class="form-control" type="text" name="telefone"
                                        placeholder="Informe seu telefone">
                                </div>
                                <br>

                                <center>
                                    <!--BOTÃO-->
                                    <button type="submit" class="btn btn-outline-secondary ">Adicionar</button>
                                </center>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-20 col-sm-20 col-md-20 col-lg-20 m-auto">
            
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="" class="btn"><small>©Anhangüera Eventos</small></a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>
</div>